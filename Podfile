  pod 'FirebaseFirestoreSwift'
  # Pods for FirebaseSample

  target 'FirebaseSampleTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'FirebaseSampleUITests' do
    # Pods for testing
  end

end
